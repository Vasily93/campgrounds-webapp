<% layout('layouts/boilerplate.ejs') %> 

    <h1>All Campgrounds:</h1>
    <a href="/campgrounds/new">ADD NEW CAMPGROUND</a>
    <hr>
    <ul>
    <% campgrounds.forEach(camp => { %>
        <div id="<%= camp._id%>" class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%=camp.image%>">
                </div>
                <div class="col-md-8">
                    <h4><a href="/campgrounds/<%= camp._id%>">
                        <%= camp.title%>
                    </a></h4>
                    <p>About: <%= camp.description%></p>
                    <p>Location: <%= camp.location%></p>
                </div>
            </div>
        </div>
    <% }) %>
    </ul>
